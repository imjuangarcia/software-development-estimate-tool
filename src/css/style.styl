// Import all partials
@require './_*.styl'

// General Styling

main
  margin 1.5rem

input
  width 100%
  padding 1rem
  border 1px solid gray
  font-size 1rem
  color black
  height 54px

  &:focus
    border 1px solid transparent
    outline 1px solid blue
    outline-offset 0

button
  border none
  cursor pointer

footer
  margin-top 2rem
  text-align center
  color gray
  font-size .75rem

  a
    color black
    text-decoration none

// Estimate creator
.create-project
  p
    margin-top 0.75rem
    color gray
  
  hr
    border none 
    border-top 1px solid #EAEAEA
    margin 1rem 0
  
  form
    display grid
    grid-gap 1rem
    align-items flex-end

    h2
      margin-top 1.5rem
      margin-bottom 0.5rem
      grid-column 1/-1
    
    button
      border 1px solid blue
      color blue
      background-color transparent
      height 54px
      transition all .3s

      &:hover
        background-color blue
        border 1px solid blue
        color white
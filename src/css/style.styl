// Import all partials
@require './_*.styl'

// General Styling

main
  margin 1.5rem

input
  width 100%
  padding 1rem
  border 1px solid gray
  font-size 1rem
  color black
  height 54px

  &:focus
    border 1px solid transparent
    outline 1px solid blue
    outline-offset 0

button
  border none
  cursor pointer

header
  p
    margin-top 0.75rem
    color gray
  
  hr
    border none 
    border-top 1px solid #EAEAEA
    margin 1rem 0

footer
  margin-top 2rem
  text-align center
  color gray
  font-size .75rem

  a
    color black
    text-decoration none

// Class to hide the elements
.hidden
  display none

// Estimate creator
.create-project
  form
    display grid
    grid-gap 1rem
    align-items flex-end

    h2
      margin-top 1.5rem
      margin-bottom 0.5rem
      grid-column 1/-1
    
    button
      border 1px solid blue
      color blue
      background-color transparent
      height 54px
      transition all .3s

      &:hover
        background-color blue
        border 1px solid blue
        color white

// Client data
.client
  h3
    margin-top 1rem

  button
    border 1px solid blue
    color blue
    background-color transparent
    height 54px
    transition all .3s
    width 100%
    margin-top 1rem

    &:hover
      background-color blue
      border 1px solid blue
      color white

  table
    background-color #F8F8F8
    width 100%
    margin-top 1rem

    tbody
      tr
        td
          border 1px solid #EAEAEA
          padding .75rem
          font-size .8rem
          text-transform uppercase
          color gray
          font-family 'Montserrat', sans-serif
          font-weight 600

          h4
            display inline-block
            min-width 160px
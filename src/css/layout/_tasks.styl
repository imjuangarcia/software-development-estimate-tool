.tasks, .tech
  background-color #f8f8f8
  padding 1.5rem
  margin-top 1.5rem

  h1
    margin-bottom 1rem
  
  h2
    margin-bottom .5rem

  h3
    color black
    margin-top 1rem
    margin-bottom 0.5rem

  button
    cta(blue, blue, transparent)
    padding 1rem
    margin-right 1rem

  .logout
    margin-right 0

  .title
    display flex
    align-items center

    h2
      margin-bottom 0
      flex 1
    
    button
      margin-top 0

  form
    display grid
    grid-template-columns repeat(auto-fit, minmax(320px, 1fr))
    grid-gap 1rem
    margin-bottom 1.5rem
    border 1px solid #CCCCCC 
    padding 1rem

    select
      height 54px
      width 100%
      background-color white

    .remove
      margin-top 0
      margin-left 0
      border-color gray
      color gray
      
      &:hover
        background-color black
        color white
        border 1px solid transparent
    
    .add
      margin-top 0
      margin-left 0

  .sample
    margin-left 0
    margin-top 0
.tech
  .title
    h2
      margin-bottom 1.5rem

.technologies
  ul
    display grid
    grid-template-columns repeat(auto-fit, minmax(75px, 1fr))
    grid-gap 1rem
    margin-top 1.5rem

    li
      text-align center

      div
        width 100%
        filter grayscale(100%)
        height 60px
        background-size contain
        background-repeat no-repeat
        background-position center
        margin-bottom .5rem
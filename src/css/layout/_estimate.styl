.estimate
  margin-top 1.5rem

  h2
    margin-bottom 1rem
  
  p
    margin-bottom 1.5rem

    span
      background-color #EAEAEA
      padding 0.25rem 0.5rem
      border-radius .25rem
      color blue
      font-family monospace
      font-size 1rem
  
  h3
    color black
    margin-bottom 0.5rem

  table
    text-align center
    margin-bottom 1.5rem

    tbody
      tr
        td
          input
            display inline
            width auto
            height auto
            padding 0
            text-align center
            border none
            font-size .8rem

            &:invalid
              border 2px solid #C62300
          
          strong
            font-weight 700
            color blue